<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".UploadToy"
    tools:fitsSystemWindows="true"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/action_bar"
            layout="@layout/action_bar"></include>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Toy"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:padding="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_marginBottom="30sp"
                    android:layout_above="@id/textView"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                    android:id="@+id/imagesrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="1dp"
                    android:ems="10"
                    android:text="Upload an Image" />

                <ImageView
                    android:id="@+id/upload_toy_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"
                    android:scaleType="centerInside"
                    />
                </LinearLayout>

                <EditText
                    android:id="@+id/nametext"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="6dp"
                    android:ems="10"
                    android:hint="Name"
                    android:padding="15dp"
                    android:background="@drawable/custom_background"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/categoriestext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="200dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="27dp"
                    android:text="Categories "
                    android:textSize="22sp"
                    tools:textStyle="bold" />


                <Spinner
                    android:id="@+id/categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="27dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:text="Tags" />


                <EditText
                    android:id="@+id/descriptiontext"
                    android:layout_width="275dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="76dp"
                    android:layout_marginRight="76dp"
                    android:layout_marginBottom="3dp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Describe "
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"

                    android:padding="15dp"
                    android:background="@drawable/custom_background"
                    android:scrollbars="vertical" />

                <EditText
                    android:id="@+id/costtext"
                    android:layout_width="257dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:hint="Cost"
                    android:padding="15dp"
                    android:background="@drawable/custom_background"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/locationtext"
                    android:layout_width="216dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="135dp"
                    android:layout_marginRight="135dp"
                    android:layout_marginBottom="8dp"
                    android:ems="10"
                    android:hint="Location"
                    android:padding="15dp"
                    android:background="@drawable/custom_background"
                    android:inputType="textPersonName" />

                <ProgressBar
                    android:id="@+id/progressBar_cyclic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="145dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="201dp"
                    android:layout_marginRight="201dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:onClick="addtoy"
                    android:text="Add toy"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
